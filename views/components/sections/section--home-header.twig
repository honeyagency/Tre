<section class="header--bg block--angle angle--right after">
	<img data-original="{{home.header.featured_project.postinfo.grid_image|resize(1280, 720)}}"
				alt="{{home.header.featured_project.title}}"
				width="100%"
				data-original-set="
				{{home.header.featured_project.postinfo.grid_image|resize(640, 360)}}  640w,
				{{home.header.featured_project.postinfo.grid_image|resize(750, 420)}}  750w,
				{{home.header.featured_project.postinfo.grid_image|resize(1080, 608)}} 1080w,
				{{home.header.featured_project.postinfo.grid_image|resize(1280, 720)}} 1280w,
				{{home.header.featured_project.postinfo.grid_image|resize(1366, 768)}} 1366w,
				{{home.header.featured_project.postinfo.grid_image|resize(1440, 810)}} 1440w,
				{{home.header.featured_project.postinfo.grid_image|resize(1920, 1080)}} 1920w"
				sizes="100vw">

	<div class="block--content spacing--gutter margin-center max-wrap vertical--center">
		<h1 class="color--white">{{home.header.header_title}}</h1>
		{% if home.header.featured_project != null %}
			<div>
				<h6 class="color--pink font--display hidden--mob">Project:</h6>
				<hr class="color--pink width text--right hidden--mob">
				<h2 class="color--white line--short hidden--mob">{{home.header.featured_project.title}}<br><span class="font--thin">{{home.header.featured_project.postinfo.date|date('Y')}}</span></h2>
				<a href="{{home.header.button_url.0.guid}}" class="inline--block margin--top-1 color--white text--uppercase font--smaller font--semi-bold font--acumin letter--1">{{home.header.button_title}}</a>
			</div>
		{% endif %}
	</div>
</section>