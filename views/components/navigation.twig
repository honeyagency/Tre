<nav role="navigation">
	<ul>
		{% for item in menu.get_items %}
			<li class="nav-item color--black {{item.classes | join(' ')}}">
				<a class="nav-link font--bold font--acumin text--uppercase letter--1" href="{{item.get_link}}">{{item.title}}</a>
				{% if item.get_children %}
					<ul class="nav nav-drop">
						{% for child in item.get_children %}
							<li class="nav-drop-item color--black">
								<a class="nav-link font--bold font--acumin  text--uppercase letter--1" href="{{child.get_link}}">{{child.title}}</a>
							</li>
						{% endfor %}
					</ul>
				{% endif %}
			</li>
		{% endfor %}
	</ul>
	</nav><!-- #nav -->